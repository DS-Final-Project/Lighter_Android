<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_relation"
        style="@style/TextAppearance.AppCompat.Headline.H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/relation"
        android:textColor="@color/neutral_dark_darkest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/TextAppearance.AppCompat.Body.S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/relation_description"
        android:textAlignment="center"
        android:textColor="@color/neutral_dark_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_relation" />

    <RadioGroup
        android:id="@+id/rg_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/TextAppearance.AppCompat.Headline.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연인"
            android:textColor="@color/neutral_dark_light" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/TextAppearance.AppCompat.Headline.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구"
            android:textColor="@color/neutral_dark_light" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/TextAppearance.AppCompat.Headline.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가족"
            android:textColor="@color/neutral_dark_light" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/TextAppearance.AppCompat.Headline.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동료"
            android:textColor="@color/neutral_dark_light" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_ok"
        style="@style/TextAppearance.AppCompat.Action.M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_round_button"
        android:backgroundTint="@color/highlight_darkest"
        android:stateListAnimator="@null"
        android:text="완료"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_relation" />


</androidx.constraintlayout.widget.ConstraintLayout>